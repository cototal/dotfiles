if [ -f ~/.bash_aliases ]; then
    . ~/.bash_aliases
fi

if [ -f ~/.bash_rails ]; then
    . ~/.bash_rails
fi

if [ -f ~/.bash_projects ]; then
    . ~/.bash_projects
fi

if [ -f ~/.bash_docker ]; then
    . ~/.bash_docker
fi

if [ -f ~/.bash_work ]; then
    . ~/.bash_work
fi

if [ -f ~/.bash_php ]; then
    . ~/.bash_php
fi

if [ -f ~/scripts ]; then
    export SCRIPT_DIR=$HOME/scripts
    export PATH="$SCRIPT_DIR:$PATH"
fi

# Set default editor to vim
export EDITOR="vim"

# Use vi mode... somewhere
set -o vi
